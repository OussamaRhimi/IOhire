@startuml
title Sprint 1 - Class Diagram

skinparam classAttributeIconSize 0
skinparam shadowing false
skinparam linetype ortho
left to right direction

class HRUser <<Strapi Admin>> {
  +email: string
  +password: string
  +role: string
}

class JobPosting {
  +id: int
  +title: string
  +description: text
  +requirements: Requirements
  +status: JobPostingStatus
  +createdAt: datetime
  +updatedAt: datetime
}

class Requirements <<value object>> {
  +skillsRequired: string[*]
  +skillsNiceToHave: string[*]
  +departments: string[*]
  +minYearsExperience: int
  +notes: string
}

class Skill {
  +id: int
  +name: string <<unique>>
}

class Department {
  +id: int
  +name: string <<unique>>
}

HRUser "1" --> "0..*" JobPosting : manages >
HRUser "1" --> "0..*" Skill : curates >
HRUser "1" --> "0..*" Department : curates >
JobPosting "1" *-- "1" Requirements : contains >
Requirements "0..*" ..> "0..*" Skill : references >
Requirements "0..*" ..> "0..*" Department : references >

enum JobPostingStatus {
  draft
  open
  closed
}

@enduml
