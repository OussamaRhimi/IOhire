@startuml
title Sprint 1 - Class Diagram (Academic Domain Model)

skinparam classAttributeIconSize 0
skinparam shadowing false
skinparam linetype ortho
left to right direction

abstract class User {
  +userId: int
  +fullName: string
  +email: string
  --
  +authenticate(password: string): boolean
  +logout(): void
}

class HRUser {
  +email: string
  +password: string
  +role: string
  --
  +addSkill(name: string): Skill
  +updateSkill(skillId: int, name: string): void
  +deleteSkill(skillId: int): void
  +searchSkills(query: string): Skill[*]
  +addDepartment(name: string): Department
  +updateDepartment(departmentId: int, name: string): void
  +deleteDepartment(departmentId: int): void
  +searchDepartments(query: string): Department[*]
  +createJobPosting(data): JobPosting
  +updateJobPosting(jobId: int, patch): JobPosting
  +changeJobStatus(jobId: int, status: JobPostingStatus): void
  +deleteJobPosting(jobId: int): void
}

User <|-- HRUser

class JobPosting {
  +jobId: int
  +title: string
  +description: text
  +status: JobPostingStatus
  +createdAt: datetime
  +updatedAt: datetime
  --
  +openPosting(): void
  +closePosting(): void
  +updateDetails(title: string, description: text): void
}

class JobRequirement {
  +skillsRequired: string[*]
  +skillsNiceToHave: string[*]
  +departments: string[*]
  +minYearsExperience: int
  +notes: string
  --
  +addRequiredSkill(skill: string): void
  +removeRequiredSkill(skill: string): void
  +addDepartment(department: string): void
  +removeDepartment(department: string): void
  +setMinYearsExperience(years: int): void
}

class Skill {
  +skillId: int
  +name: string
  --
  +rename(name: string): void
}

class Department {
  +departmentId: int
  +name: string
  --
  +rename(name: string): void
}

HRUser "1" -- "0..*" JobPosting : manages >
JobPosting "1" *-- "1" JobRequirement : defines >
JobRequirement "0..*" -- "0..*" Skill : uses >
JobRequirement "0..*" -- "0..*" Department : uses >
HRUser "1" -- "0..*" Skill : curates >
HRUser "1" -- "0..*" Department : curates >

enum JobPostingStatus {
  draft
  open
  closed
}

@enduml
