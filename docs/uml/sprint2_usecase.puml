@startuml
title Sprint 2 - Use Case Diagram
left to right direction
skinparam packageStyle rectangle
skinparam shadowing false

actor Candidate as A_Candidate
actor "HR User" as A_HR

rectangle "IOhire - Sprint 2" {
  package "Public Application Flow" {
    usecase "UC1 - Browse Open Job Postings" as UC1
    usecase "UC2 - Submit Application" as UC2
    usecase "UC3 - Upload Resume (PDF/DOCX/TXT)" as UC3
    usecase "UC4 - Provide Consent" as UC4
    usecase "UC5 - Track Application (publicToken)" as UC5
    usecase "UC6 - Delete Application (GDPR)" as UC6
  }

  package "HR Candidate Review" {
    usecase "UC7 - List Candidates" as UC7
    usecase "UC8 - View Candidate Detail" as UC8
    usecase "UC9 - Update Candidate Status" as UC9
    usecase "UC10 - Add HR Notes" as UC10
    usecase "UC11 - Download Resume" as UC11
  }
}

A_Candidate --> UC1
A_Candidate --> UC2
A_Candidate --> UC5
A_Candidate --> UC6

UC2 ..> UC3 : <<include>>
UC2 ..> UC4 : <<include>>

A_HR --> UC7
A_HR --> UC8
A_HR --> UC9
A_HR --> UC10
A_HR --> UC11

UC8 ..> UC7 : <<extend>>

@enduml
