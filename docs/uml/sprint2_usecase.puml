@startuml
title Sprint 2 - Use Case Diagram (Academic)
left to right direction
skinparam packageStyle rectangle
skinparam shadowing false

actor Candidate as A_Candidate
actor "HR User" as A_HR

rectangle "IOhire - Sprint 2" {
  package "Public CandidateApplication Flow" {
    usecase "UC21 - Browse Open JobPostings" as UC21
    usecase "UC22 - Submit CandidateApplication" as UC22
    usecase "UC23 - Upload Resume (PDF/DOCX/TXT)" as UC23
    usecase "UC24 - Provide Consent" as UC24
    usecase "UC25 - Track CandidateApplication (publicToken)" as UC25
    usecase "UC26 - Delete CandidateApplication" as UC26
  }

  package "HR CandidateApplication Review" {
    usecase "UC27 - List CandidateApplications" as UC27
    usecase "UC28 - View CandidateApplication Detail" as UC28
    usecase "UC29 - Update CandidateApplication Status" as UC29
    usecase "UC30 - Add HR Note to CandidateApplication" as UC30
    usecase "UC31 - Download Candidate Resume" as UC31
  }
}

A_Candidate --> UC21
A_Candidate --> UC22
A_Candidate --> UC25
A_Candidate --> UC26

UC22 ..> UC23 : <<include>>
UC22 ..> UC24 : <<include>>

A_HR --> UC27
A_HR --> UC28
A_HR --> UC29
A_HR --> UC30
A_HR --> UC31

UC28 ..> UC27 : <<extend>>

@enduml
