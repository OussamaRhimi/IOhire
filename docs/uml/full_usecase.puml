@startuml
title Plateforme de Parsing & d'Évaluation des CV — Diagramme de Cas d'Utilisation
left to right direction
skinparam shadowing false
skinparam packageStyle rectangle

actor "Candidat" as C
actor "RH" as HR
actor "Module IA" as AI

rectangle "Plateforme de Parsing & d'Évaluation des CV" {

  ' ===== Authentification (cross-cutting) =====
  usecase "Authentification" as UC_Auth

  ' ===== Candidat use cases =====
  usecase "Postuler CV" as UC_Postuler
  usecase "Remplir formulaire" as UC_Form
  usecase "Soumettre CV" as UC_Soumettre
  usecase "Générer un identifiant\nde suivi" as UC_GenToken

  usecase "Suivre candidature" as UC_Suivre
  usecase "Supprimer candidature" as UC_Supprimer

  usecase "Demander recommandation" as UC_Recomm
  usecase "Discuter avec chatbot" as UC_Chat

  ' ===== RH use cases =====
  usecase "Gérer sessions" as UC_Sessions
  usecase "Créer session" as UC_CreerSession
  usecase "Modifier session" as UC_ModifSession
  usecase "Supprimer session" as UC_SupprSession

  usecase "Consulter Sessions" as UC_ConsultSessions

  usecase "Exporter CV" as UC_Export
  usecase "Télécharger CV standardisé" as UC_DlStd
  usecase "Télécharger CV original\ncandidat" as UC_DlOrig

  usecase "Consulter compétences" as UC_Skills
  usecase "Ajouter compétences" as UC_AddSkill
  usecase "Modifier compétences" as UC_EditSkill
  usecase "Supprimer compétences" as UC_DelSkill

  usecase "Consulter départements" as UC_Depts
  usecase "Ajouter départements" as UC_AddDept
  usecase "Modifier départements" as UC_EditDept
  usecase "Supprimer départements" as UC_DelDept

  usecase "Gérer Candidatures" as UC_GererCand
  usecase "Consulter candidats" as UC_ConsultCand
  usecase "Rechercher / Filtrer\ncandidats" as UC_Filtrer
  usecase "Évaluer candidats" as UC_Evaluer
  usecase "Choisir un modèle de CV" as UC_Template

  usecase "Consulter analyses" as UC_Analytics
  usecase "Consulter évaluation" as UC_ConsultEval

  ' ===== Module IA use cases =====
  usecase "Analyser CV" as UC_Analyser
  usecase "Standardiser CV" as UC_Standardiser
  usecase "Comparer le profil\nau poste" as UC_Comparer
  usecase "Générer un score\nde compatibilité" as UC_Score
  usecase "Donner recommandation" as UC_DonnerRecomm
}

' ===== Candidat associations =====
C --> UC_Postuler
C --> UC_Suivre
C --> UC_Recomm
C --> UC_Chat
C --> UC_ConsultSessions

' ===== RH associations =====
HR --> UC_Sessions
HR --> UC_Export
HR --> UC_Skills
HR --> UC_Depts
HR --> UC_GererCand
HR --> UC_Analytics
HR --> UC_ConsultEval
HR --> UC_ConsultSessions

' ===== Module IA associations =====
AI --> UC_Analyser
AI --> UC_Standardiser
AI --> UC_Score
AI --> UC_Comparer
AI --> UC_DonnerRecomm

' ===== Generalizations (Postuler CV) =====
UC_Form --|> UC_Postuler
UC_GenToken --|> UC_Postuler

' ===== Generalizations (Gérer sessions) =====
UC_CreerSession --|> UC_Sessions
UC_SupprSession --|> UC_Sessions
UC_ModifSession --|> UC_Sessions

' ===== Generalizations (Exporter CV) =====
UC_DlStd --|> UC_Export
UC_DlOrig --|> UC_Export

' ===== Generalizations (Gérer Candidatures) =====
UC_ConsultCand --|> UC_GererCand
UC_Filtrer --|> UC_GererCand
UC_Evaluer --|> UC_GererCand
UC_Template --|> UC_GererCand

' ===== Generalizations (Consulter Sessions) =====
UC_ConsultSessions --|> UC_Sessions

' ===== Include =====
UC_Postuler ..> UC_Soumettre : <<include>>
UC_Suivre ..> UC_GenToken : <<include>>
UC_Recomm ..> UC_Soumettre : <<include>>
UC_Evaluer ..> UC_Comparer : <<include>>
UC_Score ..> UC_Comparer : <<include>>

UC_Sessions ..> UC_Auth : <<include>>
UC_Export ..> UC_Auth : <<include>>
UC_Analytics ..> UC_Auth : <<include>>
UC_Skills ..> UC_Auth : <<include>>
UC_Depts ..> UC_Auth : <<include>>
UC_GererCand ..> UC_Auth : <<include>>

' ===== Extend =====
UC_Supprimer ..> UC_Suivre : <<extend>>

UC_AddSkill ..> UC_Skills : <<extend>>
UC_EditSkill ..> UC_Skills : <<extend>>
UC_DelSkill ..> UC_Skills : <<extend>>

UC_AddDept ..> UC_Depts : <<extend>>
UC_EditDept ..> UC_Depts : <<extend>>
UC_DelDept ..> UC_Depts : <<extend>>

@enduml
